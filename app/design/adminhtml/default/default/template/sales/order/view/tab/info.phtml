<script type="text/javascript">

   /**
     * Retrieve gift options tooltip content
     *
     * @param int itemId
     */
    function getGiftOptionsTooltipContent(itemId)
    {
        var contentLines = [];
        var contentLine = null;
        if ($('giftmessage_item_' + itemId + '_message')) {
            contentLine = '<span style="font-weight: bold;"><?php echo $this->__('Gift Message')?></span>: ' + $('giftmessage_item_' + itemId + '_message').getValue();
            if (contentLine.length > 70) {
                contentLine = contentLine.slice(0,67) + '...';
            }
            contentLines.push(contentLine);
        }
        //contentLines.push('Another Gift Options');
        return contentLines.join('<br/>');
    }

    /**
     * Retrieve gift options window title
     *
     * @param int itemId
     */
    function getGiftOptionsWindowTitle(itemId)
    {
        var title = '<?php echo Mage::helper('sales')->__('Gift Options for'); ?>';
        if ($('giftmessage_item_' + itemId + '_product_name')) {
            title += ' ' + $('giftmessage_item_' + itemId + '_product_name').getValue();
        }
        return title;
    }

    giftOptions.setOkCallback(function(){
        this.saveGiftOptionsValues(this.currentItem.itemId);
        var _form=$('giftmessage_item_' + this.currentItem.itemId + '_form');
        _form.request();
    });
    giftOptions.addGiftOptionsGroup('giftmessage_item', ['sender', 'message', 'recipient']);
    giftOptions.setContentLoaderFunction(giftOptions.loadGiftOptionsValues, true);
    giftOptions.setGiftOptionsWindowTitleLoaderFunction(getGiftOptionsWindowTitle);

    giftOptionsTooltip.setTooltipContentLoaderFunction(getGiftOptionsTooltipContent);
</script>
